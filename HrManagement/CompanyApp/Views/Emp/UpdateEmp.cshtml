@using BOL;

<form action="/emp/updateEmp" method="post">


    @{
        Employee e = ViewBag.selectedEmp;
        <div class="form-group">
            <label for="id">Id:</label>
            <input type="number" required class="form-control" id="id" name="empId" value="@e.EmpId" readonly>
        </div>
        <div class="form-group">
            <label for="name">First Name:</label>
            <input type="text" required class="form-control" id="name" name="firstName" value="@e.FirstName">
        </div>

        <div class="form-group">
            <label for="address">Last Name:</label>
            <input type="text" required class="form-control" id="address" name="lastName" value="@e.LastName">
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input type="email" required class="form-control" id="email" name="email" value="@e.Email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" required class="form-control" id="pwd" name="password" value="@e.Password">
        </div>
        <div class="form-group">
            <label for="id">Salary:</label>
            <input type="number" required class="form-control" id="id" name="sal" value="@e.Salary">
        </div>
   }

    <button type="submit" class="btn btn-default btn-success">Register</button>
</form>